<h1>Reviews#show</h1>
<h1><%= @store.store_name %> - <%= @product.product_name %></h1>
<p><%= @product.product_price %></p>
<h2>Comments</h2>

<% @product.reviews.each do |review| %>
  <%= render 'reviews/review', { review: review } %>
<% end %>

<hr />
<%= link_to 'Add Comment', new_topic_comment_path(@topic) %>
<%= link_to 'Edit Topic', edit_sub_topic_path([@sub, @topic]) %>
<%= link_to 'Delete Topic', [@sub, @topic], method: :delete %>
<%= link_to 'Back To Topics', sub_topics_path(@sub) %>
