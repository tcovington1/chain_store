<br>
<br>
<h1 class='ui header'>Reviews form: <%= @product.product_name %></h1>
  <div class="ui tag labels">
            <a class="ui label">
              $<%=@product.product_price %>
            </a></<div>
<hr>
<button class="ui primary button">
  <a><%= link_to "Write a Review", new_product_review_path %></a>
</button>

<button class="ui secondary button">
  <a><%= link_to "Back", product_reviews_path(@product.id)%></a>
</button>

<hr>
<div class="ui card">
<% @product.reviews.each do |review| %>
   
  <div class="content">
  <div class="header">Name: <%= review.name %></div>
  <div>Subject: <%= review.subject %></div>
  <div>Message: <%= review.message %></div>
   <div class="extra content">
    <span class="left floated like">
      <i class="like icon"></i>
      Like
    </span>
    <span class="right floated star">
      <i class="star icon"></i>
      Favorite
    </span>
    <br>
  <div><%= link_to "Edit", edit_product_review_path(@product, review)%>
  
  </div>
<% end %>
</div>
</div>