<h1>Edit <%= @product.product_name %></h1>


<div class='ui form'>
<%= form_for [@store, @product] do |f| %>

  <%= f.label :product_name %>
  <%= f.text_field :product_name, required: true, autofocus: true %>
  <%= f.label :product_price %>
  <%= f.number_field :product_price, required: true, autofocus: true %>
  <%= f.submit %>
<% end %>
</div>